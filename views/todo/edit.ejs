<%- include('../partials/header') %>
<h1>Edit To-Do</h1>
<form method="post" action="/todo/update?_method=PUT">
    <div class="form-group">
        <label>Title</label>
        <input name="title" type="text" class="form-control" value="<%= todo.title %>">
    </div>

    <div class="form-group">
        <label>Content</label>
        <br>
        <input name="textField" type="text" class="form-control" value="<%= todo.textField %>">
    </div>

    <div class="form-group">
        <label>Description</label>
        <input name="description" type="text" class="form-control" value="<%= todo.description %>">
    </div>
<br>
<br>
    <input type="hidden" name="_id" value="<%= todo._id %>">
    <button type="submit" class="btn btn-primary">Edit To-Do</button>
</form>
</body>
</main>